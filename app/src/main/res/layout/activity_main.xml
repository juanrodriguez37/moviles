<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/logo" />

    <TextView
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginTop="221dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="@string/pentagono_top_resources"
        android:textAlignment="center"
        android:textSize="30sp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/txt_pdfName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_pdf_new_name"
        android:textAlignment="center"
        android:layout_marginTop="310dp"
        android:textSize="22sp"
        android:inputType="text"
        android:gravity="center_horizontal"
        android:autofillHints="" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/upload_resource"
        android:textSize="20sp"
        android:layout_marginTop="390dp"
        android:layout_marginStart="5dp" />

    <Button
        android:id="@+id/btn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/view_resources"
        android:textSize="20sp"
        android:layout_marginTop="460dp"
        android:onClick="btn_action"
        android:layout_marginStart="5dp" />


    <Button
        android:id="@+id/btn_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="home"
        android:textSize="20sp"
        android:layout_marginTop="520dp"
        android:onClick="btn_action"
        android:layout_marginStart="5dp" />


</RelativeLayout>